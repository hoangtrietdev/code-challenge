{
  "name": "backend-crud-server",
  "version": "1.0.0",
  "description": "Backend server with ExpressJS, TypeORM, SQLite, Swagger, and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "seed": "ts-node scripts/seed.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "docker:build": "docker build -t backend-crud-server .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t backend-crud-server:dev .",
    "docker:run": "docker run -p 3000:3000 backend-crud-server",
    "docker:run:dev": "docker run -p 3000:3000 -v $(pwd):/app -v /app/node_modules backend-crud-server:dev",
    "docker:up": "docker-compose up -d",
    "docker:up:dev": "docker-compose --profile dev up -d app-dev",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "express",
    "typescript",
    "typeorm",
    "sqlite",
    "swagger",
    "crud"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.0",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "jest": "^29.6.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
